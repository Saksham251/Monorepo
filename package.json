{
  "name": "week-27.2-monorepo-deployment-to-vm-using-ci-cd",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "generate:db":"cd packages/prisma && pnpm prisma generate",
    "build:backend":"cd apps/backend && pnpm run build",
    "start:backend":"cd apps/backend && pnpm run start",

    "build:ws":"cd apps/websocket && pnpm run build",
    "start:ws":"cd apps/websocket && pnpm run start",
    
    "build:web":"cd apps/web && pnpm run build",
    "start:web":"cd apps/web && pnpm run start"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
